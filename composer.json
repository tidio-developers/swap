{
    "name": "florianv/swap",
    "description": "Exchange rates library for PHP",
    "keywords": ["currency", "money", "rate", "conversion", "exchange rates"],
    "license": "MIT",
    "authors": [
        {
            "name": "Florian Voutzinos",
            "email": "florian@voutzinos.com",
            "homepage": "https://voutzinos.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "Swap\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Swap\\Tests\\": "tests/"
        }
    },
    "require": {
        "php": "^7.1.3 || ^8.0",
        "florianv/exchanger": "^2.8",
        "php-http/message-factory": "^1.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^7 || ^8 || ^9",
        "php-http/mock-client": "^1.0",
        "php-http/message": "^1.7",
        "nyholm/psr7": "^1.0",
        "php-http/discovery": "^1.0"
    },
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/tidio-developers/exchanger"
        }
    ],
    "suggest": {
        "php-http/discovery": "If you are not using `useHttpClient` but instead want to auto-discover HttpClient"
    },
    "scripts": {
        "test": "vendor/bin/phpunit"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "4.0-dev"
        }
    },
    "config": {
        "allow-plugins": {
            "php-http/discovery": true
        }
    }
}
